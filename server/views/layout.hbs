<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#0d0d0d">
    <title>{{title}}</title>
    <script src="{{@baseUrl}}/build/bundle.js"></script>
    {{#is @env "production"}}
        <link rel="stylesheet" href="{{@baseUrl}}/build/bundle.css">
    {{/is}}
</head>
<body>
{{#if error}}
    <div class="container-fluid">
        {{> header}}
        <div class="container">
            <div class="row">
                <div class="content__layout">
                    {{{body}}}
                </div>
            </div>
        </div>
        {{> footer}}
    </div>
{{else}}
    {{#each messages}}
        <div class="alert alert-{{this.type}}" role="alert">
            {{this.message}}
        </div>
    {{/each}}
    {{#if user.permissions.accessBackend}}
        <div class="container-fluid">
            {{> header}}
            <div class="container">
                <div class="row">
                    <div class="content__layout">
                        {{{body}}}
                    </div>
                </div>
            </div>
            {{> footer}}
        </div>
    {{else}}
        {{> login}}
    {{/if}}

    <input id="csrf" type="hidden" value="{{@csrftoken}}">
{{/if}}
</body>
</html>
